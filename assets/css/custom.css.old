@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;700&display=swap');

:root {
    --bucket-list-font-family: 'Noto Sans TC', sans-serif;
    --bucket-list-font-size: 16px; /* or any appropriate size */
    --bucket-list-item-color: #065A60; /* Example color, adjust as needed */
}

@font-face {
    font-family: 'lst';
    src: url('/fonts/lst.woff2') format('woff2'),
         url('/fonts/lst.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

/* Custom styles for OLD bucket list items

.bucket-list-item {
    font-family: 'lst', sans-serif; /* Ensure your custom web font is applied */
    color: #333; /* Default color, change as necessary */
/*  font-family: var(--bucket-list-font-family); */
/*  font-size: var(--bucket-list-font-size); */
/*  color: var(--bucket-list-item-color); */
    font-size: 22px;
    margin-top: 10px;
    line-height: 1.6;
    display: flex;
    align-items: center;
}

.bucket-list-item input[type="checkbox"] {
    margin-right: 10px;
}

.bucket-list-item span {
    font-family: 'lst', sans-serif; /* Ensure your custom web font is applied */
    display: inline-block;
    font-size: 55px; /* Adjust font size as needed */
    color: #blue; /* Adjust font color as needed */
}

.bucket-list-item a {
    font-family: 'lst', sans-serif;
    color: #1a0dab; /* Change color of the links */
    font-size: 55px; /* Adjust font size as needed */
    text-decoration: none; /* Optional: removes underline from links */
}

.bucket-list-item .checked {
    text-decoration: line-through;
    opacity: 0.6;
    color: #777777; /* Color for text that is crossed out */
}

@media (max-width: 768px) {
    .bucket-list-item {
        font-size: 14px; /* Smaller font size on smaller screens */
    }

}

.custom-footer-pretext {
    text-align: center;
    color: #666;  /* Default color, change as needed */
    font-size: 12px; /* Default font size, change as needed */
    margin: 12px 0; /* Adds spacing around the text */
}
